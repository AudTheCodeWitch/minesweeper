$: << 'lib'
require 'minefield'
require 'minefield_printer'
require 'prompt'

minefield = Minefield.new(width: 10, height: 10, mine_count: 1)
printer = MinefieldPrinter.new(minefield)
prompt = Prompt.new

prompt.welcome
puts printer

while(!minefield.cleared?) do
  begin
    input = prompt.reveal_at
  rescue Prompt::UserInputError
    puts "Goodbye"
    exit
  end

  continue = true

  input.each do |coords|
    cell = minefield.reveal_at(coords.fetch(:x), coords.fetch(:y))
    puts printer
    if cell.mine?
      prompt.lose
      continue = false
      break
    end
  end
  break unless continue
end

puts "Goodbye"
